<% layout('layout/boilerplate') -%>
<section>
  <div class="row">
    <div class="col-6 offset-3">
      <div class="alert alert-danger mt-4" role="alert">
        <h4 class="alert-heading"><%=err.message%></h4>
        <% if (process.env.NODE_ENV !== "production") { %>
        <p class="mb-0"><%=err.stack%></p>
        <% } %>
      </div>
    </div>
  </div>
</section>
