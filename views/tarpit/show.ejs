<% layout('layout/boilerplate') -%>
<link rel="stylesheet" href="/stylesheets/star.css">

<div class="row mt-4 mb-4">
<div class="col-6">
  <div class="card">
    <div id="productsCarousel" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-inner">
        <% products.image.forEach( (img,i) => { %>
          <div class="carousel-item <%= i === 0 ? 'active' : ''%> ">
            <img src="<%=img.url%>" class="d-block w-100 h-100" alt="My products">
          </div>
       <% }) %> 
       <% if(products.image.length > 1) {%> 
      <button class="carousel-control-prev" type="button" data-bs-target="#productsCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#productsCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
      <% } %> 
    </div>
    </div>
        <div class="card-body">
          <h5 class="card-title"><%= products.title %></h5>
          <p class="card-text"><%=products.description%></p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">$<%=products.price%></li>
        </ul>

        <div class="card-body">
            <a href="/products" class="card-link btn btn-info">All productss</a>
          <%    if(user && user._id.equals(process.env.ADMIN_ID)){  %> 
            <a href="/products/<%=products._id%>/edit" class="card-link btn btn-info">Edit</a>
            <form class="d-inline mt-2" action="/products/<%=products._id%>?_method=Delete" method="POST">
                <button class="btn btn-danger">Delete</button>
                </form>     
         <% } %>  
                  
        </div>
    </div>
</div>   

<div class="col-6">
  <h2>Reviews</h2>
  <% if(user){ %> 
  <form class= "mb-3 validated-form" action="/products/<%=products._id%>/reviews" method="POST" novalidate>
    <div class="">
      <label for="rating" class="form-label">Rating</label>
     <div>
      <fieldset class="starability-basic">
        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
        <input type="radio" id="second-rate1" name="review[rating]" value="1" />
        <label for="second-rate1" title="Terrible">1 star</label>
        <input type="radio" id="second-rate2" name="review[rating]" value="2" />
        <label for="second-rate2" title="Not good">2 stars</label>
        <input type="radio" id="second-rate3" name="review[rating]" value="3" />
        <label for="second-rate3" title="Average">3 stars</label>
        <input type="radio" id="second-rate4" name="review[rating]" value="4" />
        <label for="second-rate4" title="Very good">4 stars</label>
        <input type="radio" id="second-rate5" name="review[rating]" value="5" />
        <label for="second-rate5" title="Amazing">5 stars</label>
      </fieldset>
     </div>
    </div>
    <div class="mb-3">
      <label for="body" class="form-label">Review</label>
      <textarea class="form-control" name="review[body]" id="body" cols="10" rows="3" required></textarea>
    </div>
    <button class="btn btn-success">Submit</button>
  </form>
  <% } %> 
  <% for(let review of products.review){ %>
    <div class="card mb-3">
     <div class="card-body">
      <h3 class="card-title"><%= review.author.username%></h3>
      <p class="starability-result" data-rating="<%=review.rating%>">
        Rated: <%=review.rating%> stars
      </p>
      <p class="card-text">Review: <%=review.body%> </p>
      <% if(review.comments){ %> 
      <% for(let comment of review.comments) {%>
        <div>
          <p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;   Comment: <%=comment.body%></p>
          <p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;   Author: <%=comment.author%></p>
        </div>
        <% } %> 
        <% } %> 
      <!-- Reply on a review -->
      <button class="btn btn-primary" type="button" id="reply" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">Reply</button>
        <div class="collapse" id="collapseExample">
          <div class="card card-body">
            <form action="/products/<%=products._id%>/reviews/<%=review._id%>/comments" method="Post">
              <textarea name="comment[body]" id="reply" cols="60" rows="3"></textarea>
              <button class="btn btn-success">Submit</button>
            </form>
          </div>
        </div>
        
        <!-- Delete review -->
      <form action="/products/<%=products._id%>/reviews/<%=review._id%>?_method=delete" method="POST" > 
        <% if(user && review.author.equals(user._id)){ %>
        <button class="btn btn-danger">Delete</button>
        <% } %> 
      </form>
     </div>
     </div>
     <% } %> 
    </div>
       </div>

   