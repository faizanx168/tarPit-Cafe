<% layout('layout/boilerplate') -%>
<div class="mainImg">
    <img src="https://res.cloudinary.com/dvpbsy8id/image/upload/v1664226196/tarpitCafe/P1020393_mcvawb.jpg" alt="" class="bg">
    </div>
    <div style=" height: 85vh; width: 100vw;">&nbsp;</div>
<div class="container" >
    <h1>Shop our Products</h1>
    <div>
        <%    if(user && user._id.equals(process.env.ADMIN_ID)){  %> 
        <a href="/products/new" class="btn btn-primary mb-3" role="button">Add product</a>
        <% } %> 
            <div class="category">
                <h3>Choose Categories</h3>
                <div class="dropForm"><i class="fa-solid fa-circle-chevron-down"></i></div>
                <div id="formQuery">
                </div>
            </div>
            <hr style="padding-bottom:20px; color:rgb(1, 1, 109);">
            <% if(category) {%> 
                    <h3 style="text-align: center;"><%=category%></h3>
                  <% }else{ %>
                    <h3 style="text-align: center;">All</h3>
                  <% } %>   
            <div class="cardContainer">
                <% for(let product of products) {%>
                    <div class="card cardShape">
                        <a href="/products/<%=product._id%>">
                        <% for(let img of product.image){ %> 
                            <img src="<%=img.url%>" class="card-img-top" style="height: 26rem;" alt="My product">
                            <% } %> 
                        <div class="card-text">
                            <h5 style="margin-bottom:0;"><%=product.title%></h5> 
                            $<%=product.price%>
                        </div>
                         </a>
                    </div>
               <%} %> 
            </div>
</div>
