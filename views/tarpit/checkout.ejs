<% layout('layout/boilerplate') -%> <% if(!checkoutDone) {%> <% if(cart &&
cart.items.length > 0) { %>
<section class="container">
  <div class="checkoutContainer">
    <div class="formContainer">
      <h3>Pickup Options</h3>
      <div>
        <button class="btn shippingBtn">Shipping</button>
        <button class="btn pickupBtn">Pickup</button>
      </div>
      <div class="formbg-outer">
        <div class="formbg">
          <div class="formbg-inner padding-horizontal--48">
            <span class="padding-bottom--15">Enter your shipping address</span>
            <form
              action="/login"
              method="post"
              class="validated-form"
              novalidate
            >
              <div class="field padding-bottom--24 name">
                <input
                  type="text"
                  name="firstname"
                  class="form-control"
                  id="first-name"
                  placeholder="First Name"
                />
                <input
                  type="text"
                  name="lastname"
                  class="form-control"
                  id="last-name"
                  placeholder="Last Name"
                />
              </div>
              <div class="field padding-bottom--24">
                <input
                  type="text"
                  name="address"
                  class="form-control"
                  id="address"
                  placeholder="Address"
                />
              </div>
              <div class="field padding-bottom--24">
                <input
                  type="text"
                  name="address"
                  class="form-control"
                  id="address"
                  placeholder="Address 2"
                />
              </div>
              <div class="field padding-bottom--24">
                <input
                  type="text"
                  name="city"
                  class="form-control"
                  id="city"
                  placeholder="City / Town"
                />
              </div>
              <div class="field padding-bottom--24">
                <input
                  type="text"
                  name="zip"
                  class="form-control"
                  id="zip"
                  placeholder="ZIP code"
                />
              </div>
              <div class="field padding-bottom--24">
                <input type="submit" name="submit" value="Continue" />
                <input type="hidden" name="nonce" value="<%= nonce%>" />
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <div class="orderSummary">
      <h2>Order Summary</h2>
      <% cart.items.forEach(function(product) { %>
      <div class="order">
        <div>
          <img
            src="<%=product.image%> "
            alt="Item Image"
            style="height: 7rem; width: 7rem"
          />
        </div>
        <div><%= product.title %></div>
        <div>
          <span>$<%=product.price%></span>
          <span>Qty: <%=product.qty%></span>
        </div>
      </div>
      <% }); %>
      <div>Total: <%= cart.formattedTotals %></div>
    </div>
  </div>
</section>
<% } else { %>
<p class="alert alert-info">Sorry, no products in your cart.</p>
<% } %> <% } %>
